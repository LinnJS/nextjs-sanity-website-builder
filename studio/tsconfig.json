{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "target": "esnext",
    "types": ["node", "jest"],
    "composite": false,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "compileOnSave": true,
  "include": ["**/*.ts", "**/*.tsx", "./node_modules/@sanity/base/types/**/*.ts", "./node_modules/@sanity/base/types/**/*.tsx", "./@types/index"],
  "exclude": ["node_modules"]

}
